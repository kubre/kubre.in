---
import "@fontsource/ibm-plex-mono";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

export interface Props {
    title: string;
    description: string;
}

const props = Astro.props;
const url = Astro.url;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{props.title} - kubre.in</title>
        <!-- Favicon -->
        <link
            rel="icon"
            type="image/png"
            href="/favicon.png"
            sizes="32x32"
        />

        <meta name="title" content={props.title + " - kubre.in"} />
        <meta name="description" content={props.description} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={props.title + " - kubre.in"} />
        <meta property="og:description" content={props.description} />
        <meta property="og:image" content={"https://kubre.in/assets/me.jpg"} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={url} />
        <meta property="twitter:title" content={props.title} />
        <meta property="twitter:description" content={props.description} />
        <meta
            property="twitter:image"
            content={"https://kubre.in/assets/me.jpg"}
        />
        <style is:global>
            @font-face {
                font-family: "Departure Neon";
                /* src: url("/fonts/MonaspaceNeon-Regular.woff") format('woff'); */
                src: url("/fonts/DepartureMono-Regular.woff") format("woff");
                font-weight: normal;
                font-style: normal;
                font-display: swap;
            }

            ::-webkit-scrollbar-track {
                -webkit-box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.6);
                border-radius: 10px;
                background-color: rgba(0, 0, 0, 0.3);
            }

            ::-webkit-scrollbar {
                width: 4px;
                @apply bg-gray-500;
            }

            ::-webkit-scrollbar-thumb {
                border-radius: 10px;
                -webkit-box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.3);
                @apply bg-gray-300;
            }

            ::selection {
                @apply bg-yellow-400 text-black;
            }

            a:hover {
                @apply bg-yellow-400 transition-colors;
            }

            table {
                @apply w-full mt-4;
            }

            table th {
                @apply border-b-2 border-carbon py-2 border-r-2;
            }

            table th:last-child {
                @apply border-r-0;
            }

            table td {
                @apply border-b-2 border-carbon p-2;
            }

            table td img {
                @apply w-full h-auto;
            }

            table td:first-child {
                @apply border-r-2 border-carbon;
            }
        </style>
        <link
            rel="alternate"
            type="application/rss+xml"
            title="Vaibhav Kubre's Blog"
            href={`${Astro.site}rss.xml`}
        />
    </head>
    <body class="px-4 lg:px-0 max-w-screen-md mx-auto">
        <Nav />
        <slot />
        <Footer />
        <style>
            body {
                @apply font-mono text-carbon bg-enamel;
                height: 100vh;
                z-index: -1;
            }

            ::-webkit-scrollbar-track {
                -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
                border-radius: 10px;
                background-color: #f5f5f5;
            }

            ::-webkit-scrollbar {
                width: 12px;
                background-color: #f5f5f5;
            }

            ::-webkit-scrollbar-thumb {
                border-radius: 10px;
                -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
                background-color: #333333;
            }
        </style>
    </body>
</html>
