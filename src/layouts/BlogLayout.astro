---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

export interface Props {
    frontmatter: {
        title: string;
        description: string;
        image: ImageMetadata;
        hideHeaderImage?: boolean;
        publishedAt: Date;
        tags: string[];
        readTime: number;
    };
}

const formatter = new Intl.DateTimeFormat("en-IN", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
const { frontmatter } = Astro.props;
const url = Astro.url;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{frontmatter.title} - kubre.in</title>

        <meta name="title" content={frontmatter.title + " - kubre.in"} />
        <meta name="description" content={frontmatter.description} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={frontmatter.title + " - kubre.in"} />
        <meta property="og:description" content={frontmatter.description} />
        <meta
            property="og:image"
            content={"https://kubre.in/assets/" + frontmatter.image}
        />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={url} />
        <meta property="twitter:title" content={frontmatter.title} />
        <meta
            property="twitter:description"
            content={frontmatter.description}
        />
        <meta
            property="twitter:image"
            content={"https://kubre.in/assets/" + frontmatter.image}
        />

        <link rel="icon" type="image/jpeg" href="/assets/me.jpg" />
        <style is:global>
            body {
                @apply font-mono bg-black text-white;
            }

            .content h2 {
                @apply text-xl uppercase font-bold mb-6 mt-12 text-gray-100;
            }

            .content p {
                @apply mb-4 leading-relaxed;
            }

            .content .astro-code {
                @apply my-4 border border-white/10 p-4;
            }

            .content ol {
                @apply list-decimal list-inside space-y-2;
            }

            .content ul {
                @apply list-disc list-inside space-y-2;
            }

            .content li p {
                @apply inline;
            }

            .content li p::before {
                @apply content-none;
            }

            .content ol > ol {
                list-style-type: lower-roman;
            }

            .content ul ol,
            .content ol ol,
            .content ul ul,
            .content ol ul {
                @apply ml-4;
            }

            .content blockquote {
                @apply border-l-4 border-white/50 px-2 py-1 my-4;
            }

            ::-webkit-scrollbar-track {
                -webkit-box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.6);
                border-radius: 10px;
                background-color: rgba(0, 0, 0, 0.3);
            }

            ::-webkit-scrollbar {
                width: 4px;
                @apply bg-gray-500;
            }

            ::-webkit-scrollbar-thumb {
                border-radius: 10px;
                -webkit-box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.3);
                @apply bg-gray-300;
            }

            .content table {
                @apply w-full border border-collapse mb-8;
            }

            .content table th {
                @apply bg-white/30 uppercase text-start px-2;
            }

            .content table td {
                @apply border p-2 mb-8;
            }

            .content aside.note {
                @apply border border-l-4 border-white/50 px-2 py-1;
            }
        </style>
    </head>
    <body class="max-w-screen-md mx-auto px-4 lg:px-0">
        <Nav />
        <main class="px-4 md:px-0 pt-16">
            <h1 class="text-2xl uppercase font-bold mb-4 text-gray-100">
                {frontmatter.title}
            </h1>
            <div class="font-mono text-gray-200"></div>
            &#9716; {formatter.format(new Date(frontmatter.publishedAt))} | &#9749;
            {frontmatter.readTime} mins
        </main>
        {
            !frontmatter.hideHeaderImage && (
                <figure>
                    <img
                        src={frontmatter.image.src}
                        height={frontmatter.image.height}
                        width={frontmatter.image.width}
                        alt={frontmatter.title}
                        class="invert w-auto h-auto p-4"
                    />
                </figure>
            )
        }
        <div class="h-8"></div>
        <section class="content">
            <slot />
        </section>
        <section class="giscus mx-auto my-10 max-w-screen-md">
            <script
                src="https://giscus.app/client.js"
                data-repo="kubre/kubre.in"
                data-repo-id="R_kgDOIK6Pcg"
                data-category="Comments"
                data-category-id="DIC_kwDOIK6Pcs4CUdUh"
                data-mapping="pathname"
                data-strict="0"
                data-reactions-enabled="1"
                data-emit-metadata="0"
                data-input-position="bottom"
                data-theme="dark"
                data-lang="en"
                data-loading="lazy"
                crossorigin="anonymous"
                async
            ></script>
        </section>
    </body>
    <Footer />
</html>
