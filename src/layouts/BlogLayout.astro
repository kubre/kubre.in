---
import "@fontsource/source-code-pro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

export interface Props {
    frontmatter: {
        title: string;
        description: string;
        image: string;
        slug: string;
        publishedAt: Date;
        tags: string[];
    };
}

const formatter = new Intl.DateTimeFormat("en-IN", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
const { frontmatter } = Astro.props;
const url = Astro.url;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />

        <meta name="title" content={frontmatter.title} />
        <meta name="description" content={frontmatter.description} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={frontmatter.title} />
        <meta property="og:description" content={frontmatter.description} />
        <meta
            property="og:image"
            content={"https://kubre.in/assets/" + frontmatter.image}
        />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={url} />
        <meta property="twitter:title" content={frontmatter.title} />
        <meta
            property="twitter:description"
            content={frontmatter.description}
        />
        <meta
            property="twitter:image"
            content={"https://kubre.in/assets/" + frontmatter.image}
        />

        <meta name="description" content={frontmatter.description} />
        <link rel="icon" type="image/jpeg" href="/assets/me.jpg" />
        <style is:global>
            body {;
                @apply font-mono text-lg bg-black text-white;
            }

            h2 {
                @apply text-3xl font-bold my-6 text-gray-100;
            }

            p {
                @apply text-lg mb-4 leading-relaxed;
            }

            .astro-code {
                @apply my-4 rounded border border-gray-900 p-4;
            }
        </style>
    </head>
    <body>
        <Nav />
        <main class="max-w-screen-md mx-auto px-4 md:px-0 pt-16">
            <h1 class="text-4xl font-bold mb-4 text-gray-100">{frontmatter.title}</h1>
            <span class="font-mono text-gray-200"
                >ðŸ“… {formatter.format(new Date(frontmatter.publishedAt))}</span
            >
            <figure class="mb-8">
                <img
                    src={"/assets/" + frontmatter.image}
                    alt={frontmatter.title}
                    class="invert w-full h-auto p-4"
                />
            </figure>
            <section class="content">
                <slot />
            </section>
            <section class="giscus mx-auto my-10 max-w-screen-md">
                <script
                    src="https://giscus.app/client.js"
                    data-repo="kubre/kubre.in"
                    data-repo-id="R_kgDOIK6Pcg"
                    data-category="Comments"
                    data-category-id="DIC_kwDOIK6Pcs4CUdUh"
                    data-mapping="pathname"
                    data-strict="0"
                    data-reactions-enabled="1"
                    data-emit-metadata="0"
                    data-input-position="bottom"
                    data-theme="dark"
                    data-lang="en"
                    data-loading="lazy"
                    crossorigin="anonymous"
                    async
                ></script>
            </section>
        </main>
        <Footer />
    </body>
</html>
