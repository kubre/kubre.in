---
export interface Props {
    title: string;
    image: string;
    publishedAt: Date;
    url: string;
}

const formatter = new Intl.DateTimeFormat("en-IN", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
const { title, image, publishedAt, url } = Astro.props;
---

<div class="flex h-full justify-between">
    <div class="flex flex-col px-2 py-1 items-start">
        <p class="text-sm p-0 font-semibold">{title}</p>
        <span class="pb-4 text-xs"
            >&#9716; {formatter.format(new Date(publishedAt))}</span
        >
        <a
            href={url}
            class="border border-white/60 bg-white/50 px-2 text-sm w-28"
            >Read More &rarr;</a
        >
    </div>
    <a href={url}>
        <img
            class="invert border border-black/80 h-48 w-48 max-w-[12rem] object-contain p-1"
            src={"/assets/" + image}
        />
    </a>
</div>
