---
export interface Props {
    title: string;
    href: string;
    hasNew?: boolean;
}

const title = Astro.props.title;
const href = Astro.props.href;

const pathname = new URL(Astro.request.url).pathname.replace(/\/$/, "");
const _href = href.replace(/\/$/, "");

let isActive = false;
if (_href === "") {
    isActive = pathname === _href;
} else {
    isActive = pathname.startsWith(_href);
}
---

<a
    class=`rounded capitalize text-sm px-4 pb-0 pt-[1px] flex items-center justify-center gap-x-2 border ${isActive ? "bg-white border-white text-black" : "border-white" } hover:bg-white/90 hover:text-black transition-colors`
    href={href}
>
    {title}
</a >

