---
export interface Props {
    title: string;
    href: string;
}

const { href, title } = Astro.props;

const { pathname } = new URL(Astro.request.url);
const isActive = pathname.replace(/\/$/, "") === href.replace(/\/$/, "");
---

<a
    class="capitalize text-sm px-4 py-0 flex items-center justify-center gap-x-1 border border-transparent hover:bg-white/90 hover:text-black border-white"
    href={href}
>
    {isActive && <span class="text-xs">&#9679;</span>}
    <span class="first-letter:text-red-500">{title}</span>
</a>
