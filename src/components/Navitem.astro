---
export interface Props {
    title: string;
    href: string;
}

const { href, title } = Astro.props;

const { pathname } = new URL(Astro.request.url);
const isActive = pathname.replace(/\/$/, "") === href.replace(/\/$/, "");
const activeClasses = "bg-white text-black font-bold";
---

<a
    class={`${
        isActive && activeClasses
    } text-sm uppercase px-8 py-4 transition flex items-center justify-center border border-transparent hover:bg-white/90 hover:text-black`}
    href={href}
>
    {title}
</a>
